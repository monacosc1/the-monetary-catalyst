{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/tests/types"]
  },
  "include": [
    "src/**/*.ts",
    "src/express.d.ts",
    "src/tests/**/*.ts" // Include all test files
  ],
  "exclude": [
    "node_modules",
    "dist" // Remove "src/tests" and "**/*.test.ts" from exclude
  ]
}