{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "blocks"
    },
    "author": {
      "type": "string"
    },
    "publish_date": {
      "type": "date"
    },
    "article_type": {
      "type": "enumeration",
      "enum": [
        "market-analysis",
        "investment-idea"
      ],
      "required": true,
      "default": "market-analysis"
    },
    "slug": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "excerpt": {
      "type": "string"
    },
    "feature_image_url": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "article_images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "article_status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ],
      "required": true,
      "default": "draft"
    }
  }
}
